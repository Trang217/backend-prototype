extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Please go to this link to reset your password.
  p If you didn't request this, please ignore this email. Your password will stay safe and won't be changed.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Change my password
